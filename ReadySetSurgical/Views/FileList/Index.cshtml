@{
    ViewData["Title"] = "File List";
    string[] TableHeaders = new string[] { 
       "Id"
      ,"File Name"
      ,"Invoice Number"
      ,"Vendor Name"
      ,"Receiver Name"
      ,"Created At"
    };
}

<div class="card">
    <div class="card-body">
        <div class="row center">
            <div class="col">
                <h1>File List</h1>
            </div>
        </div>
        <div class="row center">
            <div class="col">
                <a asp-controller="FileList"
                   asp-action="SuccessIndex"><b>Success Files</b></a> |
                <a asp-controller="FileList"
                   asp-action="ErrorIndex"><b>Error Files</b></a>
            </div>
        </div>
        <br />
    </div>
</div>